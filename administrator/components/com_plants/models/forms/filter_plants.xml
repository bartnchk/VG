			type="text"
			label="COM_PLANTS_PLANTS_FILTER_SEARCH_LABEL"
			description="COM_PLANTS_PLANTS_FILTER_SEARCH_DESC"
			hint="JSEARCH_FILTER"
		/>

		<field
			name="plant_category_id"
			type="categoryparent"
			label="COM_PLANTS_FILTER_PURCHASETYPE_LABEL"
