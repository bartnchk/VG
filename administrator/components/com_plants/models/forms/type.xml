<?xml version="1.0" encoding="utf-8" ?>

<form>
    <fieldset name="type" label="Edit type">

        <field name="id" type="hidden" />

        <field name="title"
               type="text"
               label="Type title"
               description="Type title is required"
               size="70"
               class="inputbox"
               required="true"
               default="" />

        <field name="alias"
               type="text"
               label="Type alias"
               description="Type alias generated automatically"
               size="70"
               class="inputbox"
               default="" />

        <field name="category_id"
               type="categoryparent"
               required="true"
               label="Parent category"/>

        <field name="state"
               type="list"
               default="1"
               label="JSTATUS"
               description="JFIELD_PUBLISHED_DESC"
               class="">

            <option value="0">JUNPUBLISHED</option>
            <option value="1">JPUBLISHED</option>

        </field>

    </fieldset>
</form>