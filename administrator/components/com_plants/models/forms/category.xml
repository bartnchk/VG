<?xml version="1.0" encoding="utf-8" ?>

<form>
    <fieldset name="category" label="Edit category">

        <field name="id" type="hidden" />

        <field name="title"
               type="text"
               label="Category title"
               description="Category title is required"
               size="70"
               class="inputbox"
               required="true"
               default="" />

        <field name="alias"
               type="text"
               label="Category alias"
               description="Category alias generated automatically"
               size="70"
               class="inputbox"
               default="" />

        <field name="cover"
               type="media"
               label="Icon"
               directory="categories"
               default="" />

        <field name="photo"
               type="media"
               label="Photo"
               directory="categories/photos"
               default="" />

        <field name="state"
               type="list"
               default="1"
               label="JSTATUS"
               description="JFIELD_PUBLISHED_DESC"
               class="">

            <option value="0">JUNPUBLISHED</option>
            <option value="1">JPUBLISHED</option>

        </field>

    </fieldset>
</form>